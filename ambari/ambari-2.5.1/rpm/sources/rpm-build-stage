set -xv

#JAVA_OPTS=""
MAVEN_OPTS="-Xmx2g -XX:MaxPermSize=512M -XX:ReservedCodeCacheSize=512m"
source scl_source enable rh-maven33 bash
unset MAVEN_HOME
unset M2_HOME
set -ex
echo "11111111111111111111111111111111111111111111111111111111111111111111111111111111"
which mvn
mvn versions:set -DnewVersion=2.5.1.0.0
pushd ambari-metrics
mvn versions:set -DnewVersion=2.5.1.0.0
popd
echo "333333333333333333333333333333333333333333333333333333333333333333333333333333333"
which mvn
mvn -B clean install package rpm:rpm -DnewVersion=2.5.1.0.0 -DskipTests -Dpython.ver="python >= 2.6"
mkdir installationdir; cd installationdir
rpm2cpio  ../ambari-agent/target/rpm/ambari-agent/RPMS/x86_64/*.rpm |cpio -idv
rpm2cpio  ../ambari-server/target/rpm/ambari-server/RPMS/x86_64/*.rpm |cpio -idv


[Unit]
Description=HDFS  Namenode
After=network.target
After=systemd-user-sessions.service

[Service]
User=hdfs
Group=hadoop
Type=forking
Restart=no
PermissionsStartOnly=true
EnvironmentFile=/etc/default/hadoop-systemd
EnvironmentFile=/etc/default/hadoop-hdfs-namenode-systemd
EnvironmentFile=/etc/profile.d/java-systemd.sh
ExecStartPre=/bin/install -d -m 0755 -o hdfs -g hdfs /var/run/hadoop-hdfs
ExecStart=/usr/lib/hadoop/sbin/hadoop-daemon.sh --config /etc/hadoop/conf start namenode
ExecStop=/usr/lib/hadoop/sbin/hadoop-daemon.sh --config /etc/hadoop/conf stop namenode
SyslogIdentifier=hdfs-namenode
[Install]
WantedBy=multi-user.target
